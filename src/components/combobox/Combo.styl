.b-combo-placeholder
  background #fff
  color #0f0f0f
  position absolute
  top 20px
  left 10px
  padding 0 10px
  transition top 0.5s cubic-bezier(.55, 0, .1, 1);

.b-combo-input:focus + .b-combo-placeholder, .b-combo-placeholder.active
  top -8px
  transition top 0.5s cubic-bezier(.55, 0, .1, 1);

.b-combo-input:focus
  border-bottom-right-radius 0px
  border-bottom-left-radius 0px

.b-combo-input
  color #0c0c0c
  font-size inherit
  outline none
  padding 20px
  border-radius 5px
  background transparent
  border 1px solid #a3a6af

.b-combo-suggestions
  visibility hidden
  opacity 0
  background #fff
  position absolute
  top 58px
  left 0px
  width 100%
  border-left 1px solid #a3a6af
  border-right 1px solid #a3a6af
  border-bottom 1px solid #a3a6af
  border-bottom-right-radius 5px
  border-bottom-left-radius 5px
  transition all 0.5s cubic-bezier(.55, 0, .1, 1);

.b-combo-input:focus + .b-combo-suggestions, .b-combo-suggestions.active
  visibility visible
  opacity 1
  transition all 0.5s cubic-bezier(.55, 0, .1, 1);

.b-combo-marked
  color #ff7904
  text-decoration underline

.b-combo-item
  padding 20px
  text-align left
  &:hover
    background #ff7904
    color #fff
    cursor pointer
  &:hover .b-combo-marked
    color #fff

.b-combo
  position relative
  display inline-block
  &:after
    content "▼"
    color #a3a6af
    position absolute
    right 10px
    top 20px
  &.upper:after
    content "▲"
  &.upper .b-combo-suggestions
    bottom 58px
    border-left 1px solid #a3a6af
    border-right 1px solid #a3a6af
    border-top 1px solid #a3a6af
    border-bottom 0px
    border-top-right-radius 5px
    border-top-left-radius 5px
    border-bottom-right-radius 0px
    border-bottom-left-radius 0px
    top inherit
  &.upper .b-combo-input:focus + .b-combo-placeholder, &.upper .b-combo-placeholder.active
    bottom -8px
    top inherit
  &.upper .b-combo-input:focus
    border-top-right-radius 0px
    border-top-left-radius 0px
    border-bottom-right-radius 5px
    border-bottom-left-radius 5px
